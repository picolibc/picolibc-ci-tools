+# Enable multilibs:
+
+MULTILIB_OPTIONS    = m64bit-doubles  nofpu        mbig-endian-data  mpid mno-allow-string-insns
+MULTILIB_DIRNAMES   =  64-bit-double  no-fpu-libs   big-endian-data   pid no-strings
